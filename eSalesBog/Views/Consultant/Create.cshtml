@model eSalesBog.Models.SalesViewModels.ConsultantViewModel

@{
    ViewBag.Title = "ახალი";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PersonalNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PersonalNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PersonalNumber, "", new { @class = "text-danger" })
            </div>
        </div>      

        <div class="form-group">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => Model.Gender, EnumHelper.GetSelectList(typeof(Common.Enums.GenderEnum)), "-- აირჩიეთ --", new { @class = "form-control" })
              
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BirthDate, new {  @class = "form-control datepicker" })
               
                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger " })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RecommenderConsultantID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">               

                @*@Html.DropDownListFor(Model => Model.RecommenderConsultantID, new SelectList(Model.RecommenderConsultant, "ID", "PersonalNumber"), "-- აირჩიეთ --", new { @class = "form-control" })*@
                @Html.DropDownListFor(Model => Model.RecommenderConsultantID, (List<SelectListItem>)ViewData["RecommenderConsultants"], "-- აირჩიეთ --", new { @class = "form-control" })

              
                    @*@Html.ValidationMessageFor(model => model.RecommenderConsultantID, "", new { @class = "text-danger" })*@
</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="შენახვა" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("სიაზე დაბრუნება", "Index")
</div>

@section scripts{

    <script src="~/Scripts/js/consultants.js"></script>

}