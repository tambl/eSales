@model IEnumerable<eSalesBog.Models.SalesViewModel>

@{
    ViewBag.Title = "მთავარი";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>გაყიდვები</h3>
<p>
    @Html.ActionLink("ახალი გაყიდვის დამატება", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SaleDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsultantID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductsDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaleDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SaleDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConsultantDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductsDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SaleDescription)
        </td>
        <td>
            @Html.ActionLink("რედაქტირება", "Edit", new { id=item.ID }) |
            @Html.ActionLink("დათვალიერება", "Details", new { id=item.ID }) |
            @Html.ActionLink("წაშლა", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
