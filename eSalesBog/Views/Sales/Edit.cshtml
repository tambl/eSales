@model eSalesBog.Models.SalesViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        @Html.Partial("_SaleEditor", Model)

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="შენახვა" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("სიაზე დაბრუნება", "Index")
</div>

@section templates {
    @Html.Partial("_ProductTemplate", new eSalesBog.Models.SalesViewModels.ProductViewModel())
}
@section scripts{

    <script src="~/Scripts/js/sales.js"></script>

}