@model eSalesBog.Models.SalesViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ახალი გაყიდვის დამატება</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Partial("_SaleEditor", Model)

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="გაყიდვების შენახვა" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("სიაზე დაბრუნება", "Index")
</div>
@section templates {
    @Html.Partial("_ProductTemplate", new eSalesBog.Models.SalesViewModels.ProductViewModel())
}
@section scripts{

    <script src="~/Scripts/js/sales.js"></script>

}