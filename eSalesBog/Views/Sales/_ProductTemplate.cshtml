@model eSalesBog.Models.SalesViewModels.ProductViewModel

<table class="table table-hover">
    <tbody>
        <tr class="hidden-product-tr" style="display:none">
            @*@Html.Hidden("ID", null)*@
            @Html.Hidden("IsDeleted", false)            
            <td class="form-group">
                @Html.DropDownListFor(m => m.ID, (List<SelectListItem>)ViewData["Products"], "-- აირჩიეთ --", new { @class = "form-control" })
            </td>
            <td class="form-group">
                @Html.EditorFor(model => model.ProductCount, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                <button class="btn btn-danger btn-sm remove-product" type="button">
                    <i class="fa fa-minus size-18"></i>
                </button>
            </td>
        </tr>
    </tbody>
</table>
